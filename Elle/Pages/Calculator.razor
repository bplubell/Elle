@page "/calculator"

<h1>Your calculator</h1>

<div class="row mb-3">
    <div class="col-3">
        <input type="text" class="form-control @(string.IsNullOrWhiteSpace(Expression1Name) ? "is-invalid" : "")" bind="@Expression1Name" />
    </div>
    <span class="d-flex align-items-center" style="font-size: larger;">=</span>
    <div class="col">
        <input type="text" class="form-control" bind="@Expression1" />
    </div>
</div>

@functions {
    private string Expression1Name { get; set; } = "";
    private string Expression1 { get; set; } = "10";

}
